	"bugs": {
		"url": "https://github.com/sondregj/conway/issues"
	},
	"devDependencies": {
		"@types/jest": "^24.0.20",
		"jest": "^24.9.0",
		"prettier": "^1.18.2",
		"ts-jest": "^24.1.0",
		"tslint": "^5.20.0",
		"tslint-config-prettier": "^1.18.0",
		"typescript": "^3.6.4"
	},
	"files": [
		"dist/**/*"
	],
	"keywords": [
		"game-of-life",
		"conway"
